<div id="pnlTest" class="container p-5">
    <hr style="margin: 24px auto 0 auto;">
    <table>
        <tbody>
            <tr>
                <th>Deck Shuffled</th>
            </tr>
            <tr>
                <td>

                    @for (var i = 0; i < Model.ShuffledDeck.Count; i++)
                    {
                        @Html.Raw($"{i + 1}: <span style=\"color:#{Model.ShuffledDeck[i].Color};\">" +
                        $"{Model.ShuffledDeck[i].Face}{Model.ShuffledDeck[i].Suit}</span><br>")
                                        }
                </td>
            </tr>
        </tbody>
    </table>
