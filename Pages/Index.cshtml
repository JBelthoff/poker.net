@page
@model IndexModel
@{
    ViewData["Title"] = "Poker Calculator | Texas Holdem | John Belthoff";
}
<div class="container text-center p-5">
    <h1 class="display-4">Poker Calculator</h1>
    <p><a href="/about">About Poker Calculator</a> | <a href="https://github.com/JBelthoff/poker.johnbelthoff.com" target="_blank">See the code</a> | <a href="https://www.johnbelthoff.com">Studio JB</a></p>
    <p>@Model.DealerID</p>
</div>


@if (Model.ShowShufflePanel)
{
    <div class="container p-5">
        <h2>Texas Holdem</h2>
        <form method="post">
            <input type="hidden" asp-for="DealerID" />
            @Html.AntiForgeryToken()
            <button type="submit" name="action" value="deal" class="btn btn-dark">Deal</button>
        </form>
    </div>
}

@if (Model.ShowFlopPanel)
{
    <div class="container p-5">
        <h2>Texas Holdem</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-striped text-center align-middle">
                <thead class="table-dark">
                    <tr>
                @for (int p = 0; p < Model.lPlayerHands.Count; p++)
                {
                    var isDealer = (p + 1) == Model.DealerID;
                    <th class="@(isDealer ? "table-info" : "")">
                        @(isDealer ? $"Dealer {p + 1}" : $"Player {p + 1}")
                    </th>
                }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @for (int p = 0; p < Model.lPlayerHands.Count; p++)
                        {
                            var hand = Model.lPlayerHands[p];

                            <td>
                                @for (int c = 0; c < 2; c++)
                                {
                                    @Html.Raw($"<span style=\"color:#{hand[c].Color};\">" +
                                    $"{hand[c].Face}{hand[c].Suit}</span><br>")
                                                }
                    </td>
                                        }
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="bg-light text-dark p-1 rounded mb-4">
            <h2 class="display-6 fw-semibold mb-3">Community Cards:</h2>
            <p class="lead text-center">&nbsp;&nbsp;</p>
        </div>

        <form method="post">
            <input type="hidden" asp-for="DealerID" />
            @Html.AntiForgeryToken()
            <input type="hidden" name="cardids" value="@Model.CardIDs">
            <button type="submit" name="action" value="flop" class="btn btn-dark">Deal Flop</button>
            <button type="submit" name="action" value="shuffle" class="btn btn-dark">Shuffle</button>
        </form>
    </div>


}


